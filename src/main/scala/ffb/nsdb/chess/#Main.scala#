package ffb.nsdb.chess

import zio.ZIOAppDefault
import zio.http.{App, Http, Method, Request, Response, Root, Server, /, ->}

object Main extends ZIOAppDefault {

  val app: App[Any] =
    Http.collect[Request] {
      case Method.GET -> Root / "bestMove" => Response.text("TO BE IMPLEMENTED: best move will be returned here.")
    }

  override val run =
    Server.serve(app).provide(Server.defaultWithPort(8080))
}
